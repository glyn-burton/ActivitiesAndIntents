<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    tools:context=".MainActivity">

    <Button
    android:id="@+id/btnPictureActivity"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Camera"
    android:onClick="buttonClick"
    android:background="@color/BtnBG"
    android:textColor="@color/btnText"
    />

    <Button
        android:id="@+id/btnEMIActivity"
        app:layout_constraintBottom_toTopOf="@id/btnPictureActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMI Calculator"
        android:onClick="buttonClick"
        android:background="@color/BtnBG"
        android:textColor="@color/btnText"
        />

    <Button
        android:id="@+id/btnPersonActivity"
        app:layout_constraintBottom_toTopOf="@id/btnEMIActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Person Creator"
        android:onClick="buttonClick"
        android:background="@color/BtnBG"
        android:textColor="@color/btnText"
        />

    <Button
        android:id="@+id/btnWebActivity"
        app:layout_constraintBottom_toTopOf="@id/btnPersonActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web"
        android:onClick="buttonClick"
        android:background="@color/BtnBG"
        android:textColor="@color/btnText"
        />

    <Button
        android:id="@+id/btnMediaActivity"
        app:layout_constraintBottom_toTopOf="@id/btnWebActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video"
        android:onClick="buttonClick"
        android:background="@color/BtnBG"
        android:textColor="@color/btnText"
        />


</androidx.constraintlayout.widget.ConstraintLayout>